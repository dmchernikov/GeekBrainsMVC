@model IEnumerable<HomeWork_03.Models.ProductModel>

@{
    ViewData["Title"] = "Список товаров";
}

<h1>Список товаров</h1>
<p>
    <a asp-action="Edit" asp-controller="Product" class="btn btn-success">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Product" asp-route-id="@item.Id"><i class="far fa-envelope-open"></i></a>
                    <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id"><i class="fas fa-eraser"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
